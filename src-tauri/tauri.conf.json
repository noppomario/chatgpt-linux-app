{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ChatGPT for Linux",
  "version": "0.1.0",
  "identifier": "com.chatgpt.linux",
  "build": {
    "frontendDist": "../public",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "ChatGPT for Linux",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "url": "https://chat.openai.com"
      }
    ],
    "security": {
      "csp": "default-src 'self' https://chat.openai.com; img-src 'self' https: data:; style-src 'self' 'unsafe-inline' https://chat.openai.com; connect-src 'self' https://chat.openai.com https://*.openai.com wss://*.openai.com; frame-src 'self' https://chat.openai.com"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
